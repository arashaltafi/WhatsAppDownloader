<resources>
    <!-- Base application theme. -->
    <style name="Theme.WhatsAppDowloader" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_green</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/vazir_medium</item>
    </style>

    <!--MainActivity-->
    <style name="bubble_navigation_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="bt_colorActive">@color/black</item>
        <item name="bt_colorInactive">@color/item_background</item>
        <item name="bt_titleSize">18sp</item>
    </style>

    <!--ShowMediaFragment-->
    <style name="btn_media_action_style">
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="layout_constraintDimensionRatio">2:1.1</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="view_divider_menu_style">
        <item name="android:background">@color/green</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!--dialog styles    -->
    <style name="tv_title_dialog_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="iv_dialog_style">

        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginEnd">14dp</item>
    </style>

    <style name="tv_dialog_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="scale_anim_style">
        <item name="android:windowEnterAnimation">@anim/scale_in_animation</item>
        <item name="android:windowExitAnimation">@anim/scale_out_animation</item>
    </style>

    <style name="tv_point_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btn_dialog_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">22dp</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="rating_bar_style">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/dark_green</item>
    </style>


</resources>